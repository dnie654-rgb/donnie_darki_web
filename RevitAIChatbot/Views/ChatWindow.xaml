<Window x:Class="RevitAIChatbot.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Assistant" Height="600" Width="400"
        WindowStyle="ToolWindow" Topmost="True" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <ScrollViewer x:Name="ScrollOutput" Grid.Row="0" Margin="5" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatHistory" VerticalAlignment="Bottom"/>
        </ScrollViewer>

        <!-- Action Panel (Run Code) -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="5" Visibility="Collapsed" x:Name="ActionPanel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Generated Code (Editable):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="CodeEditor" Grid.Row="1" Height="100" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Margin="0,0,0,5"/>
                <Button Grid.Row="2" Content="Run Generated Script" Click="OnRunScriptClick" Background="#E1E1E1" Padding="5"/>
            </Grid>
        </Border>

        <!-- Input Area -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputBox" Grid.Column="0" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" KeyDown="InputBox_KeyDown"/>
            <Button Content="Send" Grid.Column="1" Width="60" Margin="5,0,0,0" Click="OnSendClick"/>
        </Grid>
    </Grid>
</Window>

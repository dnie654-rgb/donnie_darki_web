<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revit Assistant" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <Border Grid.Row="0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
            <ScrollViewer Name="ChatScroll" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="ChatHistory" Margin="10"/>
            </ScrollViewer>
        </Border>

        <!-- Status / Loading -->
        <TextBlock Name="StatusText" Grid.Row="1" Text="Ready" Foreground="Gray" Margin="2,0,0,5" FontSize="10"/>

        <!-- Input Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="InputBox" Grid.Column="0" Height="30" VerticalContentAlignment="Center" Padding="5"/>
            <Button Name="SendButton" Grid.Column="1" Content="Send" Width="60" Margin="5,0,0,0"/>
        </Grid>
    </Grid>
</Window>
